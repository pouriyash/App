@model LoginViewModel
@{
    ViewData["Title"] = "ورود";
    Layout = null;
}




<div class="login">
    <div class="login__block">
        <div class="login__block__header">
            <div class="text-center">
                <i class="pe-7s-user pe-3x"></i>
            </div>
            <h6 class="text-center">ورود به اکانت پی</h6>
        </div>

        <form asp-controller="Login"
              asp-action="Index"
              asp-route-returnurl="@ViewData["ReturnUrl"]"
              method="post"
              autocomplete="off"
              class="form-horizontal">
            <partial name="_CustomValidationSummary" />
            <div class="form-group">
                <label asp-for="Username" class="col-md-2 control-label"></label>
                <div class="controls col col-md-10">
                    <div class="input-group col-md-4">
                        <span class="input-group-addon">
                            <span class="fas fa-user"></span>
                        </span>
                        <input asp-for="Username" autocomplete="off" dir="ltr" class="form-control col-md-4" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="controls col col-md-10">
                    <div class="input-group col-md-4">
                        <span class="input-group-addon">
                            <span class="fas fa-asterisk"></span>
                        </span>
                        <input asp-for="Password" dir="ltr" class="form-control col-md-4" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col col-md-2 control-label">
                    کد امنیتی
                </label>
                <div class="controls col col-md-10">
                    <dnt-captcha asp-captcha-generator-max="9000"
                                 asp-captcha-generator-min="1"
                                 asp-captcha-generator-language="Persian"
                                 asp-font-name="Tahoma"
                                 asp-font-size="20"
                                 asp-fore-color="#333333"
                                 asp-back-color="#ccc"
                                 asp-text-box-class="text-box single-line form-control col-md-4"
                                 asp-text-box-template="<div class='input-group col-md-4'><span class='input-group-addon'><span class='glyphicon glyphicon-lock'></span></span>{0}</div>"
                                 asp-validation-message-class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-info col-md-2">ورود</button>
                </div>
            </div>
        </form>
    </div>
</div>

 