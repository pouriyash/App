<div class="login">
    <div class="login__block">
        <div class="login__block__header">
            <div class="text-center">
                <i class="pe-7s-user pe-3x"></i>
            </div>
            <h6 class="text-center"> ثبت نام در  اکانت پی</h6>
        </div>
        <form asp-controller="Register"
              asp-action="Index"
              method="post">
            <div class="form-group">
                <input class="form-control" placeholder="ایمیل" required type="email" asp-for="Email" />
                <i class="form-group__bar"></i>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="نام و نام خانوادگی" required type="text" asp-for="FullName" />
                <i class="form-group__bar"></i>
            </div>
            <div class="form-group">
                <input class="form-control" required placeholder="شماره همراه" type="number" asp-for="PhoneNumber" />
                <i class="form-group__bar"></i>
            </div>
            <div class="form-group">
                <input class="form-control" required placeholder="رمزعبور " type="password" asp-for="Password" />
                <i class="form-group__bar"></i>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="تکرار رمزعبور" required type="password" asp-for="ConfirmPassword" />
                <i class="form-group__bar"></i>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-dark">
                    <i class="pe-7s-right-arrow pe-2x"></i>
                </button>
            </div>
        </form>
    </div>
</div>

