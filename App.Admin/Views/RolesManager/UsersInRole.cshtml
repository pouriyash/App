@{
    ViewData["Title"] = "خانه";
}
@model PagedUsersListViewModel
@{
    int counter = 0;
}
@*<a asp-action="Create" asp-controller=" " class="btn btn-primary">ایجاد یک نقش جدید</a>*@
<style>
    .nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover {
        color: #fff;
        cursor: default;
        background-color: transparent;
        border: 1px solid #ddd;
        border-bottom-color: transparent;
    }

    .nav-tabs > li > a {
        color: #fff;
        margin-right: 0;
    }

    .nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover, .nav > li > a:focus, .nav > li > a:hover {
        background-color: #5F1A2B;
    }

    .tab-pane {
        margin-bottom: 2.3rem;
        min-height:300px;
        position: relative;
        min-width: 0;
        word-wrap: break-word;
       
        background-clip: border-box;
       
        border-radius: 2px;
        padding: 15px;
    }
</style>
<br />
<div class="content__inner">
    <div class="row">
        <div class="col-md-12">
            <div class="content__inner__card wow zoomIn">
                <div class="content__inner__card__title">
                    جدول ها
                </div>
                <div class="content__inner__card__desc">
                    از طریق جعبه زیر می توانید جدول ها را مشاهده کنید
                </div>

                <div class="row">
                    <div class="col-md-4 col-xs-4 col-xs-4">
                        <div class="form-group">
                            <div class="select dataTables-select">
                                <select class="form-control">
                                    <option>نمایش ۱۰ آیتم</option>
                                    <option>نمایش ۱۵ ایتم</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 col-xs-8 col-xs-8">
                        <form>
                            <div class="form-group from-txt-search">
                                <input type="text" placeholder="جستجو کنید ..." class="form-control " />
                                <i class="form-group__bar"></i>
                            </div>
                        </form>
                    </div>
                </div>

                @foreach (var item in Model.Users)
                {

                    <div class="row">
                        <div class="col-md-12">
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab1">مشخصات</a></li>
                                <li><a data-toggle="tab" href="#tab2">فعالیت ها </a></li>
                                <li><a data-toggle="tab" href="#tab3">شبکه های اجتماعی </a></li>

                            </ul>

                            <div class="tab-content">
                                <div id="tab1" class="tab-pane fade in active">
                                    <div class="row">
                                        <div class="col-md-4 col-xs-12 col-sm-6">
                                            <img src="./images/1.jpg" class="img-responsive img-thumbnail" />
                                        </div>
                                        <div class="col-md-4 col-xs-12 col-sm-6">
                                            <div class="content__inner__card__desc">
                                                <b>نام و نام خانوادگی : </b> @item.DisplayName
                                            </div>
                                            <div class="content__inner__card__desc">
                                                <b>نام کاربری : </b> @item.UserName
                                            </div>
                                            <div class="content__inner__card__desc">
                                                <b>ویرایش مشخصات : </b>
                                                <a class="btn btn-outline-warning">
                                                    ویرایش
                                                </a>
                                            </div>
                                            <div class="content__inner__card__desc">
                                                <b>وضعیت کاربری : </b>
                                                <form style="display: inline-block;" asp-action="ChangeUserActive" asp-controller="UsersManager" asp-route-userId="@item.Id" asp-route-ReturnUrl="~/RolesManager/Index">
                                                    @{
                                                        if (item.IsActive)
                                                        {
                                                            <input class="btn btn-outline-success" type="hidden" name="activate" value="false" />
                                                            <input class="btn btn-outline-success" type="submit" value="غیر فعال شود" />
                                                        }
                                                        else
                                                        {
                                                            <input class="btn btn-outline-success" type="hidden" name="activate" value="true" />
                                                            <input class="btn btn-outline-danger" type="submit" value="فعال شود" />

                                                        }
                                                    }
                                                </form>
                                            </div>
                                            <div  class="content__inner__card__desc">
                                                <b>وضعیت ایمیل : </b>
                                                <form  style="display: inline-block;" asp-action="ChangeUserActive" asp-controller="UsersManager" asp-route-userId="@item.Id" asp-route-ReturnUrl="~/RolesManager/Index">
                                                    @{
                                                        if (item.IsActive)
                                                        {
                                                            <input class="btn btn-outline-success" type="hidden" name="activate" value="false" />
                                                            <input class="btn btn-outline-success" type="submit" value="غیر فعال شود" />
                                                        }
                                                        else
                                                        {
                                                            <input class="btn btn-outline-success" type="hidden" name="activate" value="true" />
                                                            <input class="btn btn-outline-danger" type="submit" value="فعال شود" />

                                                        }
                                                    }
                                                </form>
                                            </div>
                                            <div class="content__inner__card__desc">
                                                <b>نقش های سیستم : </b>
                                                <a asp-action="UserRolesManager" asp-controller="RolesManager" asp-route-userId="@item.Id" class="btn btn-outline-primary">
                                                    مدیریت نقش ها
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div id="tab2" class="tab-pane fade">
                                    <div class="row">
                                        <div class="col-md-4 col-xs-12 col-sm-4">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-lg" placeholder="col-md-4">
                                                <i class="form-group__bar"></i>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-xs-12 col-sm-4">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-lg" placeholder="col-md-4">
                                                <i class="form-group__bar"></i>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-xs-12 col-sm-4">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-lg" placeholder="col-md-4">
                                                <i class="form-group__bar"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input">
                                                <span class="custom-control-indicator"></span>
                                                <span class="custom-control-description">
                                                    آپشنی که انتخاب می کنید شما
                                                    ؟؟؟ 1
                                                </span>
                                            </label>

                                            <label class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input">
                                                <span class="custom-control-indicator"></span>
                                                <span class="custom-control-description">
                                                    آپشنی که انتخاب می کنید شما
                                                    ؟؟؟ 1
                                                </span>
                                            </label>

                                            <label class="custom-control custom-checkbox custom-checkbox-inline">
                                                <input type="checkbox" class="custom-control-input">
                                                <span class="custom-control-indicator"></span>
                                                <span class="custom-control-description">گزینه اول</span>
                                            </label>

                                            <div>
                                                <button class="btn btn-outline-primary">primary</button>
                                                <button class="btn btn-outline-success">success</button>
                                                <button class="btn btn-outline-danger">danger</button>
                                                <button class="btn btn-outline-warning">warning</button>
                                                <button class="btn btn-outline-info">info</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="tab3" class="tab-pane fade">
                                    <h3>Menu 2</h3>
                                    <p>
                                        Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium
                                        doloremque laudantium, totam rem aperiam.
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>

                }

