@using App.Common.Toolkit
@Html.Raw(Styles.MakeLayoutBlank())
@model RoleViewModel
@{
    ViewData["Title"] = "خانه";
}

<form asp-action="Create" asp-controller="RolesManager" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-4 col-xs-12 col-sm-4">
        <div class="form-group">
            <input type="text" asp-for="Name" class="form-control form-control-sm" placeholder="نام نقش ">
            <i class="form-group__bar"></i>
        </div>
    </div>
    <input type="submit" class="btn btn-success" />
</form>
