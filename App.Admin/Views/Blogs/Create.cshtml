@using App.DomainModels.Dto.Product
@model ProductDTO

@{
    ViewData["Title"] = "افزودن مقاله";
}

@using (Html.BeginForm("Create", "Blogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="row">

            <div class="col-lg-2 col-xs-12 col-sm-4">
                <div class="form-group">
                    <input type="text" name="Title" required class="form-control form-control-sm" placeholder="عنوان مقاله">
                    <i class="form-group__bar"></i>
                </div>
            </div>

            <div class="col-md-6 col-xs-12 col-sm-4">
                <div class="col-lg-4 control-label">عکس اصلی مقاله</div>
                <div class="col-lg-8">
                    <input type="file" name="Image" class="form-control form-control-sm" placeholder="عکس اصلی مقاله ">

                </div>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-4">
                <div class="form-group">
                    <textarea class="form-control form-control-lg" name="ShortDescription" rows="8" placeholder="توضیحات مختصر را وارد کنید "></textarea>
                    <i class="form-group__bar"></i>
                </div>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-4">
                <div class="form-group">
                    <textarea class="form-control form-control-lg" name="Content" rows="8" placeholder="توضیحات را وارد کنید "></textarea>
                    <i class="form-group__bar"></i>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" style="float:left" class="btn btn-lg btn-outline-success">ایجاد</button>
            </div>
        </div>
    </div>
}

