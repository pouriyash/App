@using App.DomainModels.Dto.ContactUs
@model IEnumerable<ContactUsSummaryDTO>
@using App.DomainModels.SSOT
@inject FileConfig config
@{
    ViewData["Title"] = "ارتباط با ما";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int counter = 0;
}
<div class="content__inner">
    <div class="row">
        <div class="col-md-12">
            <div class="content__inner__card wow zoomIn">
                <div class="content__inner__card__title">
                    ارتباط با ما
                </div>
                <br />


                <div class="table-responsive">
                    <table class="table  table-striped">
                        <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>نام</th>
                                <th>شرح</th>
                                <th>ایمیل</th>
                                <th>شماره تماس</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(++counter)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                   

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

               

            </div>
        </div>
    </div>
</div>

