@using App.DomainModels.Dto.Product
@using App.DomainModels.SSOT
@inject FileConfig fileConfig
@{
    List<ProductDTO> Products= ViewBag.ProductList;
}
<section class="banner bgwhite p-t-40 p-b-40">
    <div class="container">
        <div class="row">
            @foreach (var item in Products)
            {
                <div class="col-sm-10 col-md-8 col-lg-4 m-l-r-auto">
                    <div class="block1 hov-img-zoom pos-relative m-b-30">
                        <img src="@fileConfig.WebAddress@item.Image" alt="IMG-BENNER">

                        <div class="block1-wrapbtn w-size2">
                            <!-- Button -->
                            <a asp-action="ProductDetail" asp-controller="Product" asp-route-Id="@item.Id" class="flex-c-m size2 m-text2 bg3 hov1 trans-0-4">
                                @item.Name
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
