@using App.DomainModels.Dto.Product
@using App.DomainModels.SSOT
@inject FileConfig config
@model List<ProductDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ProductTypeDTO> ProductTypes = ViewBag.ProductTypes;
}
<body class="animsition">

    <!-- Title Page -->
    <section class="bg-title-page p-t-50 p-b-40 flex-col-c-m" style="border-bottom:solid 5px tomato;background-image: url(../../images/heading-pages-02.jpg);">
        <h2 class="l-text2 t-center">
            Women
        </h2>
        <p class="m-text13 t-center">
            New Arrivals Women Collection 2018
        </p>
    </section>


    <!-- Content page -->
    <section class="bgwhite p-t-55 p-b-65" dir="rtl">
        <div class="container">
            <div class="row">

                @*@Html.Partial("_SideBarMenu", ProductTypes)*@
                <div class="col-sm-12 col-md-12 col-lg-12 p-b-10">
                    <!--  -->
                    @*<div class="flex-sb-m flex-w p-b-35">
                            <div class="flex-w">
                                <div class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10">
                                    <select class="selection-2" name="sorting">
                                        <option>Default Sorting</option>
                                        <option>Popularity</option>
                                        <option>Price: low to high</option>
                                        <option>Price: high to low</option>
                                    </select>
                                </div>

                                <div class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10">
                                    <select class="selection-2" name="sorting">
                                        <option>Price</option>
                                        <option>$0.00 - $50.00</option>
                                        <option>$50.00 - $100.00</option>
                                        <option>$100.00 - $150.00</option>
                                        <option>$150.00 - $200.00</option>
                                        <option>$200.00+</option>

                                    </select>
                                </div>
                            </div>

                            <span class="s-text8 p-t-5 p-b-5">
                                Showing 1–12 of 16 results
                            </span>
                        </div>*@

                    <!-- Product -->
                    <div class="row">
                        @if (Model.Count>0)
                        {
                            foreach (var item in Model)
                            {
                                <div class="col-sm-12 col-md-12 col-lg-4 p-b-50">
                                    <!-- Block2 -->
                                    <div class="block2 box">
                                        <div class="block2-img wrap-pic-w of-hidden pos-relative ">
                                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-Id="@item.Id" class="block2-name dis-block s-text3 p-b-5">

                                                <img src="@config.WebAddress@item.Image" alt="IMG-PRODUCT">

                                            </a>
                                        </div>

                                        <div class="block2-txt p-t-20">
                                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-Id="@item.Id" class="block2-name text-center dis-block s-text3 p-b-5">
                                                @item.Name
                                            </a>

                                            @*<span class="block2-price m-text6 p-r-5">
                                $75.00
                            </span>*@
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p style="color:tomato;font-size:25px;text-align:center">بزودی این محصول ارائه می شود.</p>
                        }


                    </div>

                    <!-- Pagination -->
                    @*<div class="pagination flex-m flex-w p-t-26">
                            <a href="#" class="item-pagination flex-c-m trans-0-4 active-pagination">1</a>
                            <a href="#" class="item-pagination flex-c-m trans-0-4">2</a>
                        </div>*@
                </div>
            </div>
        </div>
    </section>



    <!-- Back to top -->
    <div class="btn-back-to-top bg0-hov" id="myBtn">
        <span class="symbol-btn-back-to-top">
            <i class="fa fa-angle-double-up" aria-hidden="true"></i>
        </span>
    </div>

    <!-- Container Selection -->
    <div id="dropDownSelect1"></div>
    <div id="dropDownSelect2"></div>
    @section script{


        <script type="text/javascript">
            $(".selection-1").select2({
                minimumResultsForSearch: 20,
                dropdownParent: $('#dropDownSelect1')
            });

            $(".selection-2").select2({
                minimumResultsForSearch: 20,
                dropdownParent: $('#dropDownSelect2')
            });
        </script>

        <script type="text/javascript">
            $('.block2-btn-addcart').each(function () {
                var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
                $(this).on('click', function () {
                    swal(nameProduct, "is added to cart !", "success");
                });
            });

            $('.block2-btn-addwishlist').each(function () {
                var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
                $(this).on('click', function () {
                    swal(nameProduct, "is added to wishlist !", "success");
                });
            });
        </script>

        <script type="text/javascript">
            /*[ No ui ]
            ===========================================================*/
            var filterBar = document.getElementById('filter-bar');

            noUiSlider.create(filterBar, {
                start: [50, 200],
                connect: true,
                range: {
                    'min': 50,
                    'max': 200
                }
            });

            var skipValues = [
                document.getElementById('value-lower'),
                document.getElementById('value-upper')
            ];

            filterBar.noUiSlider.on('update', function (values, handle) {
                skipValues[handle].innerHTML = Math.round(values[handle]);
            });
        </script>

    }


</body>
