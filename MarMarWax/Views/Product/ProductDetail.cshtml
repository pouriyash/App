@using App.DomainModels.Dto.Product
@model ProductDTO
@using App.DomainModels.SSOT
@inject FileConfig fileConfig
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<ProductColorSummaryDTO> colors = ViewBag.colors;
}
<style>
</style>
<!-- Product Detail -->

<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>

                <div class="slick3">
                    @if (Model.ProductGalleryImages.Count > 0)
                    {
                        @foreach (var item in Model.ProductGalleryImages.OrderBy(p => p.Id))
                        {
                            <div class="item-slick3" data-thumb="http://admin.marmarwax.com/UploadFiles/@item.Image">
                                <div class="wrap-pic-w ">
                                    <img src="http://admin.marmarwax.com/UploadFiles/@item.Image" alt="IMG-PRODUCT">
                                </div>
                            </div>
                        }
                    }

                </div>

            </div>
        </div>

        <div class="w-size14 p-t-30 respon5" dir="rtl">
            <h3 style="text-align:center;color:#e65540;font-weight:bold;font-size:22px" class="product-detail-name m-text16 p-b-13">
                @Model.Name
            </h3>
            <hr />
            @*<span class="m-text17">
                    $22
                </span>*@

            <p class="s-text8 p-t-10">
                <h4>
                    @Html.Raw(Model.ShortDescription)

                </h4>
            </p>
            <hr />
            <!--  -->
            <div class="p-t-33 p-b-60">
                @*<div class="flex-m flex-w p-b-10">
                        <div class="s-text15 w-size15 t-center">
                            Size
                        </div>

                        <div class="rs2-select2 rs3-select2 bo4 of-hidden w-size16">
                            <select class="selection-2" name="size">
                                <option>Choose an option</option>
                                <option>Size S</option>
                                <option>Size M</option>
                                <option>Size L</option>
                                <option>Size XL</option>
                            </select>
                        </div>
                    </div>*@

                @if (colors.Count > 0)
                {
                    <div class="flex-m flex-w">
                        <div class="s-text15 w-size15 t-center">
                            تنوع رنگ :
                        </div>

                        @foreach (var item in colors)
                        {
                            <div style="background-color:@item.colorCode;width:50px;height:50px;border-radius:50%;margin:10px;border:2px solid gray"></div>
                        }

                    </div>
                }

            </div>


            <!--  -->
            <h5 class="flex-sb-m cs-pointer m-text19 color0-hov trans-0-4" data-toggle="collapse" data-target="#demo">
                توضیحات
                <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
            </h5>

            <div class=" collapse" id="demo" style="margin-top:20px;">
                <p class="s-text8">
                    @Html.Raw(Model.Description)
                </p>
            </div>

        </div>
    </div>
</div>

