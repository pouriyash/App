        color: white;
        text-decoration: none;
        font-size: 17px;
        display: block;
    }

    .topnav a.icon {
        background: black;
        display: block;
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
        width: 60px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .topnav a.icon:hover {
        background-color: #000;
        color: #fff;
    }

    .topnav a.icon .fa {
        font-size: 22px !important;
    }

    .topnav a:hover {
        background-color: #ddd;
        color: black;
    }

    .active {
        background-color: #4CAF50;
        color: white;
    }
</style>
<script>
    function myFunction() {
        $("#myLinks").toggleClass('hide');
    }

    /*[ Mobile Header Expand(Dropdown) ]
   ===========================================================*/
    $(".expand-item-toggle").on('click', function () {
        const dropdown = $(this).siblings('.expand-list')
        if (dropdown.parents('.expand-list').length > 0) {
            const parentMaxHeight = dropdown.parents('.expand-list').attr('data-max-height').split('px')[0];
            const selfMaxHeight = dropdown.attr('data-max-height').split('px')[0]
            if (dropdown.hasClass('hide')) {
                dropdown.parents('.expand-list').css('max-height', Number(parentMaxHeight) + Number(selfMaxHeight));
                $('.dropdown-list').css(
                    'max-height',
                    Number($('.dropdown-list').css('max-height').split('px')[0]) + Number(selfMaxHeight)
                );
            }
            else {
                dropdown.parents('.expand-list').css('max-height', Number(parentMaxHeight));
                $('.dropdown-list').css(
                    'max-height',
                    Number($('.dropdown-list').attr('data-max-height').split('px')[0]) 
                );
            }
        }
        dropdown.toggleClass('hide');
    })
</script>